    <p class="text-2xl pb-10">
      Ready to go?
    </p>
    <%= tw_button_to 'Ready!',
      start_game_path(game),
      method: :post,
      form_class: "flex flex-col"
    %>
  <% end %>

  <% if Flipper.enabled? :multiplayer_games %>
