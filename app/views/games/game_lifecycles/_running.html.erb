<div class="flex flex-col grow justify-center text-center">
  <p class="flex flex-col text-2xl justify-center basis-2/5 grow">
    <%= game.current_question.body.html_safe %>
  </p>
  <div class="flex flex-col justify-top basis-3/5 grow">
    <%= button_to game.current_question.answer_1.html_safe,
      answer_game_path(game),
      method: :post,
      class: button_class,
      form_class: "flex flex-col",
      params: {
        answer: game.current_question.answer_1
      }
    %>
    <%= button_to game.current_question.answer_2.html_safe,
      answer_game_path(game),
      method: :post,
      class: button_class,
      form_class: "flex flex-col",
      params: {
        answer: game.current_question.answer_2
      }
    %>
    <% if game.current_question.answer_3 %>
      <%= button_to game.current_question.answer_3.html_safe,
        answer_game_path(game),
        method: :post,
        class: button_class,
        form_class: "flex flex-col",
        params: {
          answer: game.current_question.answer_3
        }
      %>
    <% end %>
    <% if game.current_question.answer_4 %>
      <%= button_to game.current_question.answer_4.html_safe,
        answer_game_path(game),
        method: :post,
        class: button_class,
        form_class: "flex flex-col",
        params: {
          answer: game.current_question.answer_4
        }
      %>
    <% end %>
  </div>
</div>
